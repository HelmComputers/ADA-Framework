<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin"
    android:scrollbars="vertical">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <com.mobandme.ada.examples.devfest.ui.views.RoundImageView
		        style="@style/employee_big_picture"
		        android:id="@+id/Employee:Image" />
	   		
	   		<com.mobandme.ada.examples.devfest.ui.views.Label 
		        style="@style/card_description"
		        android:layout_marginLeft="@dimen/default_margin"
		        android:id="@+id/Employee:Biography"
		        android:textSize="@dimen/text_size_small"
		        android:text="@string/field_dummy"/>
	        
	    </LinearLayout>
	    
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_marginTop="@dimen/default_margin"
	        android:layout_marginBottom="@dimen/default_margin"
	        android:background="@color/active_color" />
	    
	    <TableLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
	        <TableRow android:layout_marginBottom="@dimen/default_margin">
	    		<com.mobandme.ada.examples.devfest.ui.views.Label
			        style="@style/form_title"
			        android:text="@string/field_name"/>        
			        
	    		<com.mobandme.ada.examples.devfest.ui.views.Label
			        style="@style/form_value"
			        android:id="@+id/Employee:Name"
			        android:text="@string/field_dummy"/>
	        </TableRow>
	        
	        <TableRow android:layout_marginBottom="@dimen/default_margin">
	    		<com.mobandme.ada.examples.devfest.ui.views.Label 
			        style="@style/form_title"
			        android:text="@string/field_birthday"/>        
			        
	    		<com.mobandme.ada.examples.devfest.ui.views.Label
			        style="@style/form_value"
			        android:id="@+id/Employee:Birthday"
			        android:text="@string/field_dummy"/>
	        </TableRow>
	    </TableLayout>
    </LinearLayout>
</ScrollView>